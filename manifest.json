{
  "manifest_version": 2,
  "name": "YT2Invidious",
  "version": "1.0",
  "description": "Opens YouTube links in an Invidious instance.",
  "permissions": ["contextMenus", "tabs", "storage"],
  "icons": {
    "48": "assets/icons/border-48.png"
  },
  "background": {
    "scripts": ["dist/contextMenu.js"],
    "persistent": false,
    "type": "module"
  },
  "options_ui": {
    "page": "views/options.html",
    "open_in_tab": true
  }
}
